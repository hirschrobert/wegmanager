#!/usr/bin/make -f

# see https://www.debian.org/doc/packaging-manuals/fhs/fhs-3.0.html
export DH_VIRTUALENV_INSTALL_ROOT=/opt
%:
	dh $@ --with python-virtualenv --buildsystem=pybuild

override_dh_virtualenv:
	dh_virtualenv --python /usr/bin/python3.10

override_dh_strip:
	dh_strip --exclude=libtiff
	
override_dh_shlibdeps:
	dh_shlibdeps -l $(HOME)/.local/share/virtualenvs/wegmanager-*/lib/python3.10/site-packages/Pillow.libs/
